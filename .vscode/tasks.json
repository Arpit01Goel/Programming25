{
    "tasks": [
        {
            "label": "g++ build active file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task by Debugger."
        },
        {
            "label": "Compile and Run with Input/Output",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/a.out",
                "&&",
                "${fileDirname}/a.out",
                "<",
                "${fileDirname}/input.txt",
                ">",
                "${fileDirname}/output.txt"
            ],
            
            "group": "build",
            "problemMatcher": [],
            "detail": "Compile and run the current file with input from input.txt and output to output.txt"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Compile and Run CPP file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/a.out",
                "&&",
                "${fileDirname}/a.out"
            ],
            
            "group": "build",
            "problemMatcher": [],
            "detail": "Compile and run the current file"
        },
    ],
    "version": "2.0.0"
}